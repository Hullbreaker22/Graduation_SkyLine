@model InitialClass

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #0f1b33 0%, #1a3a5f 50%, #2c5282 100%);
            color: #333;
            line-height: 1.5;
            min-height: 100vh;
            padding: 20px;
        }

        .flight-details-container {
            max-width: 900px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            position: relative;
        }

            /* Creative background elements */
            .flight-details-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 8px;
                background: linear-gradient(90deg, #ff7e5f, #feb47b, #86a8e7, #91eae4);
                z-index: 10;
            }

            .flight-details-container::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 10% 20%, rgba(255, 126, 95, 0.1) 0%, transparent 20%), radial-gradient(circle at 90% 30%, rgba(134, 168, 231, 0.1) 0%, transparent 20%), radial-gradient(circle at 50% 80%, rgba(145, 234, 228, 0.1) 0%, transparent 20%);
                pointer-events: none;
                z-index: 1;
            }

        .flight-header {
            padding: 30px 20px;
            background: linear-gradient(135deg, #1a2a6c, #007AFF);
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .flight-header::before {
                content: "";
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                animation: float 15s infinite linear;
            }

        @@keyframes float {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .flight-title {
            font-size: 2.2rem;
            margin-bottom: 10px;
            position: relative;
            z-index: 2;
        }

        .flight-route {
            font-size: 1.2rem;
            opacity: 0.9;
            position: relative;
            z-index: 2;
        }

        .route-visual {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px auto;
            max-width: 80%;
            position: relative;
            z-index: 2;
        }

        .city {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .city-icon {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

        .flight-path {
            flex-grow: 1;
            height: 3px;
            background: rgba(255, 255, 255, 0.3);
            margin: 0 15px;
            position: relative;
        }

            .flight-path::after {
                content: "✈";
                position: absolute;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
                color: white;
                animation: fly 8s infinite linear;
            }

        @@keyframes fly {
            0% {
                left: 0;
            }

            100% {
                left: 100%;
            }
        }

        .flight-section {
            padding: 25px;
            border-bottom: 1px solid #eaeaea;
            position: relative;
            z-index: 2;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: #1a2a6c;
            display: flex;
            align-items: center;
            gap: 10px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
        }

            .section-title i {
                color: #007AFF;
            }

        .flight-leg {
            margin-bottom: 30px;
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s, box-shadow 0.3s;
            border-left: 4px solid #007AFF;
        }

            .flight-leg:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            }

        .leg-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .airline {
            font-weight: 600;
            font-size: 1.2rem;
        }

        .flight-number {
            color: #666;
            font-size: 0.9rem;
        }

        .flight-table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0;
        }

            .flight-table td {
                padding: 10px 0;
                vertical-align: top;
            }

        .time {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1a2a6c;
        }

        .location {
            font-weight: 500;
            font-size: 1.1rem;
        }

        .code {
            color: #666;
            font-size: 0.9rem;
        }

        .terminal {
            font-size: 0.9rem;
            color: #666;
        }

        .travel-time {
            margin: 15px 0;
            color: #666;
            text-align: center;
            font-style: italic;
            padding: 8px;
            background: #f8f9fa;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .flight-duration {
            font-size: 0.9rem;
            color: #666;
            font-style: normal;
        }

        .amenities {
            margin: 15px 0;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .amenity-item {
            display: flex;
            align-items: center;
            background: #f8f9fa;
            padding: 8px 15px;
            border-radius: 20px;
            transition: all 0.3s;
        }

            .amenity-item:hover {
                background: #e9ecef;
                transform: translateY(-2px);
            }

        .amenity-checkbox {
            margin-right: 10px;
            width: 20px;
            height: 20px;
            border: 2px solid #ccc;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .checked {
            background: #007AFF;
            border-color: #007AFF;
            color: white;
        }

            .checked::after {
                content: "✓";
                font-weight: bold;
            }

        .unchecked::after {
            content: "✗";
            color: #ccc;
        }

        .layover {
            background: linear-gradient(135deg, #f0f7ff, #e3f2fd);
            padding: 20px;
            border-radius: 12px;
            margin: 20px 0;
            color: #007AFF;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 15px;
            border-left: 4px solid #007AFF;
        }

        .aircraft-info {
            display: flex;
            gap: 30px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            background: #f8f9fa;
            padding: 12px;
            border-radius: 10px;
            min-width: 150px;
            transition: all 0.3s;
        }

            .info-item:hover {
                background: #e9ecef;
                transform: translateY(-3px);
            }

        .info-label {
            font-size: 0.9rem;
            color: #666;
        }

        .info-value {
            font-weight: 500;
            margin-top: 5px;
        }

        .emissions {
            color: #28a745;
            font-weight: 500;
        }

        .fares-section {
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            position: relative;
            z-index: 2;
        }

        .fare-options {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .fare-option {
            background: white;
            border: 2px solid #eaeaea;
            border-radius: 15px;
            padding: 25px 15px;
            width: 180px;
            text-align: center;
            transition: all 0.4s;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .fare-option::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #ff7e5f, #feb47b);
            }

            .fare-option:nth-child(2)::before {
                background: linear-gradient(90deg, #86a8e7, #91eae4);
            }

            .fare-option:nth-child(3)::before {
                background: linear-gradient(90deg, #7b4397, #dc2430);
            }

            .fare-option:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            }

            .fare-option.selected {
                border-color: #007AFF;
                background-color: #f0f7ff;
                transform: translateY(-5px);
            }

        .fare-type {
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 1.2rem;
        }

        .fare-price {
            font-size: 1.8rem;
            font-weight: 700;
            color: #007AFF;
            margin-bottom: 10px;
        }

        .fare-desc {
            font-size: 0.85rem;
            color: #666;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            position: relative;
            overflow: hidden;
        }

            .btn::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: all 0.5s;
            }

            .btn:hover::before {
                left: 100%;
            }

        .btn-primary {
            background: linear-gradient(135deg, #007AFF, #0056CC);
            color: white;
            box-shadow: 0 5px 15px rgba(0, 122, 255, 0.4);
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0, 122, 255, 0.6);
            }

        .btn-secondary {
            background: #f0f0f0;
            color: #333;
        }

            .btn-secondary:hover {
                background: #e0e0e0;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        /* Date Display Styles */
        .date-display {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            background: #f0f7ff;
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 0.85rem;
            color: #007AFF;
            margin-top: 5px;
        }

        .time-arrival {
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        /* Enhanced Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            backdrop-filter: blur(5px);
            align-items: center;
            justify-content: center;
        }

            .modal[aria-hidden="false"] {
                display: flex;
            }

        .modal-content {
            background: #fff;
            border-radius: 20px;
            width: 90%;
            max-width: 800px;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            animation: modalSlideIn 0.3s ease-out;
        }

        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-50px) scale(0.9);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .modal-header {
            background: linear-gradient(135deg, #1a2a6c, #007AFF);
            color: white;
            padding: 25px 30px;
            border-radius: 20px 20px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

            .modal-header h2 {
                margin: 0;
                font-size: 1.5rem;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .fare-badge {
            background: rgba(255,255,255,0.2);
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .fare-summary {
            padding: 25px 30px;
            text-align: center;
            background: #f8f9fa;
            border-bottom: 1px solid #eaeaea;
        }

        .fare-price-large {
            font-size: 3rem;
            font-weight: 700;
            color: #007AFF;
            margin-bottom: 10px;
        }

        .fare-route {
            font-size: 1.1rem;
            color: #666;
            font-weight: 500;
        }

        .fare-details-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 25px;
            padding: 30px;
        }

        .detail-category {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #007AFF;
        }

            .detail-category h3 {
                margin: 0 0 15px 0;
                font-size: 1.1rem;
                color: #1a2a6c;
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #eaeaea;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .detail-label {
            color: #666;
            font-size: 0.9rem;
        }

        .detail-value {
            font-weight: 500;
            color: #333;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .yes {
            color: #28a745;
        }

        .no {
            color: #dc3545;
        }

        .fare-total {
            padding: 20px 30px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-top: 1px solid #eaeaea;
        }

        .total-breakdown {
            max-width: 300px;
            margin: 0 auto;
        }

        .breakdown-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #ddd;
        }

            .breakdown-item.total {
                border-top: 2px solid #007AFF;
                border-bottom: none;
                font-weight: 700;
                font-size: 1.2rem;
                color: #1a2a6c;
                margin-top: 10px;
                padding-top: 15px;
            }

        .modal-buttons {
            display: flex;
            gap: 15px;
            padding: 25px 30px;
            border-top: 1px solid #eaeaea;
        }

        .close {
            position: absolute;
            right: 20px;
            top: 20px;
            background: rgba(255,255,255,0.2);
            border: none;
            color: white;
            font-size: 1.5rem;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            backdrop-filter: blur(10px);
            transition: all 0.3s;
        }

            .close:hover {
                background: rgba(255,255,255,0.3);
                transform: rotate(90deg);
            }

        @@media (max-width: 768px) {
            .flight-details-container {
                margin: 10px;
                border-radius: 15px;
            }

            .flight-table {
                font-size: 0.9rem;
            }

            .time {
                font-size: 1.3rem;
            }

            .aircraft-info {
                flex-direction: column;
                gap: 15px;
            }

            .fare-options {
                flex-direction: column;
                align-items: center;
            }

            .action-buttons {
                flex-direction: column;
            }

            .route-visual {
                max-width: 95%;
            }

            .fare-details-grid {
                grid-template-columns: 1fr;
                gap: 15px;
                padding: 20px;
            }

            .modal-content {
                width: 95%;
                margin: 10px;
            }

            .fare-price-large {
                font-size: 2.5rem;
            }

            .modal-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="flight-details-container">
        <div class="flight-header">
            <h1 class="flight-title">Flight Details</h1>
            <div class="flight-route">@Model.flights.LeavingAirport!.city.Name → @Model.flights.ArriveAirport!.city.Name</div>

            <div class="route-visual">
                <div class="city">
                    <div class="city-icon">
                        <i class="fas fa-plane-departure"></i>
                    </div>
                    <div>@Model.flights.LeavingAirport.Code</div>
                </div>
                <div class="flight-path"></div>
                <div class="city">
                    <div class="city-icon">
                        <i class="fas fa-plane-arrival"></i>
                    </div>
                    <div>@Model.flights.ArriveAirport.Code</div>
                </div>
            </div>
        </div>

        @if (Model.flightSegment.Count != 0)
        {
            @foreach (var item in Model.flightSegment)
            {
                <div class="flight-section">
                    <h2 class="section-title">
                        <i class="fas fa-plane-departure"></i>
                        Flight @item.Segment_Order of @Model.flightSegment.Count
                    </h2>

                    <div class="flight-leg">
                        <div class="leg-header">
                            <div class="airline">@Model.flights.AirLine.Name <span class="flight-number">@item.Flight_Number</span></div>
                        </div>

                        <table class="flight-table">
                            <tr>
                                <td width="60%">
                                    <div class="location">@item.DepartureAirport.city.Name</div>
                                    <div class="code">@item.DepartureAirport.Code</div>
                                    <div class="terminal">Terminal: @item.DepartureAirport.terminal</div>
                                    <div class="terminal">Distance: @item.Distance_KM KM</div>
                                </td>
                                <td width="40%" style="text-align: right;">
                                    <div class="time">@item.Departure_Time</div>
                                    <div class="date-display">
                                        <i class="far fa-calendar"></i>
                                        @if (Model.flights.Leaving_Time != null)
                                        {
                                            @Model.flights.Arriving_Time.ToString("ddd, MMM dd yyyy")
                                        }
                                    </div>
                                    <div class="code">@item.DepartureAirport.city.TimeZone</div>
                                </td>
                            </tr>
                        </table>

                        <div class="travel-time">
                            <i class="far fa-clock"></i>
                            Travel time: @Model.flights.Duration hours
                            <span class="flight-duration">(@FormatDuration(Model.flights.Duration))</span>
                        </div>

                        <table class="flight-table">
                            <tr>
                                <td>
                                    <div class="location">@item.ArrivalAirport.city.Name</div>
                                    <div class="code">@item.ArrivalAirport.Code</div>
                                    <div class="time-arrival">
                                        <span class="time">@item.Arrival_Time</span>
                                        <span class="date-display">
                                            <i class="far fa-calendar"></i>
                                            @if (Model.flights.Arriving_Time != null)
                                            {
                                                @Model.flights.Arriving_Time.ToString("ddd, MMM dd yyyy")
                                            }
                                        </span>
                                    </div>
                                    <div class="terminal">Terminal:@item.ArrivalAirport.terminal</div>
                                </td>
                            </tr>
                        </table>

                        <div class="aircraft-info">
                            <div class="info-item">
                                <span class="info-label">Aircraft</span>
                                <span class="info-value">@item.Aircraft_Type</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Cabin</span>
                                <span class="info-value">Economy</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Emissions</span>
                                <span class="info-value emissions">Average CO₂</span>
                            </div>
                        </div>

                        <h3 class="section-title"><i class="fas fa-concierge-bell"></i> Amenities</h3>
                        <div class="amenities">
                            <div class="amenity-item">
                                <div class="amenity-checkbox checked"></div>
                                <div>WiFi</div>
                            </div>
                            <div class="amenity-item">
                                <div class="amenity-checkbox checked"></div>
                                <div>In-seat power outlet</div>
                            </div>
                            <div class="amenity-item">
                                <div class="amenity-checkbox checked"></div>
                                <div>In-flight entertainment</div>
                            </div>
                            <div class="amenity-item">
                                <div class="amenity-checkbox checked"></div>
                                <div>Complimentary meals</div>
                            </div>
                        </div>
                    </div>

                    @if (item.Layover_Duration_Min != 0)
                    {
                        <div class="layover">
                            <i class="fas fa-clock fa-2x"></i>
                            <div>
                                <strong>@item.Layover_Duration_Min Minutes layover in @item.ArrivalAirport.city.Name</strong><br>
                                Change planes in @item.ArrivalAirport.city.Country (Terminal 4 to Terminal 5)
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="fares-section">
                <h2 class="section-title"><i class="fas fa-tag"></i> Select Fare</h2>
                <div class="fare-options">
                    @if (Model.flights.Fares != null && Model.flights.Fares.Any())
                    {
                        foreach (var fare in Model.flights.Fares)
                        {
                            var refundable = fare.Refundable.ToString().ToLower();
                            var changeable = fare.Changeable.ToString().ToLower();
                            var seat = fare.Seat_Selection.ToString().ToLower();
                            <div class="fare-option"
                                 data-fareid="@fare.Id"
                                 data-cabin="@fare.CabinClass"
                                 data-price="@fare.price.ToString("C")"
                                 data-refundable="@refundable"
                                 data-changeable="@changeable"
                                 data-baggage="@fare.Baggage_Allowance"
                                 data-seat="@seat">
                                <div class="fare-type">@fare.CabinClass</div>
                                <div class="fare-price">@fare.price.ToString("C")</div>
                                <div class="fare-desc">
                                    @(fare.Refundable ? "Refundable" : "Non-refundable") |
                                    @(fare.Changeable ? "Changeable" : "Fixed") |
                                    Baggage: @fare.Baggage_Allowance
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div>No fares available for this flight.</div>
                    }
