    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('fareModal');
            const closeBtn = document.querySelector('#fareModal .close');
            const cancelBtn = document.getElementById('cancelModal');
            const selectBtn = document.getElementById('selectModal');

            function openModal(data) {
                // Set basic info
                document.getElementById('modalCabin').textContent = data.cabin;
                document.getElementById('modalPrice').textContent = data.price;
                document.getElementById('modalBadge').textContent = data.cabin;

                // Set flexibility
                const refundableYes = data.refundable === 'true';
                document.getElementById('modalRefundable').innerHTML = refundableYes ?
                    '<i class="fas fa-check-circle yes"></i> Yes' :
                    '<i class="fas fa-times-circle no"></i> No';

                const changeableYes = data.changeable === 'true';
                document.getElementById('modalChangeable').innerHTML = changeableYes ?
                    '<i class="fas fa-check-circle yes"></i> Yes' :
                    '<i class="fas fa-times-circle no"></i> No';

                document.getElementById('modalChangeFee').textContent = changeableYes ? '$50' : 'Not Applicable';

                // Set baggage
                document.getElementById('modalBaggage').textContent = data.baggage;

                // Set seatingseating
                const seatYes = data.seat === 'true';
                document.getElementById('modalSeat').innerHTML = seatYes ?
                    '<i class="fas fa-check-circle yes"></i> Available' :
                    '<i class="fas fa-times-circle no"></i> Not Available';

                document.getElementById('modalSeatType').textContent = data.cabin === 'First Class' ? 'Extra Wide' :
                                                                     data.cabin === 'Business' ? 'Extra Legroom' : 'Standard';

                // Calculate price breakdown
                const priceValue = parseFloat(data.price.replace(/[^0-9.]/g, ''));
                const basePrice = priceValue * 0.7;
                const taxes = priceValue * 0.3;

                document.getElementById('modalBasePrice').textContent = '$' + basePrice.toFixed(2);
                document.getElementById('modalTaxes').textContent = '$' + taxes.toFixed(2);
                document.getElementById('modalTotalPrice').textContent = data.price;

                // Store selected fare id
                modal.dataset.selectedFareId = data.fareid;
                modal.setAttribute('aria-hidden', 'false');
            }

            function closeModal() {
                modal.setAttribute('aria-hidden', 'true');
                delete modal.dataset.selectedFareId;
            }

            // Attach click to each fare-option
            document.querySelectorAll('.fare-option').forEach(opt => {
                opt.addEventListener('click', function () {
                    const data = {
                        fareid: this.dataset.fareid,
                        cabin: this.dataset.cabin,
                        price: this.dataset.price,
                        refundable: this.dataset.refundable,
                        changeable: this.dataset.changeable,
                        baggage: this.dataset.baggage,
                        seat: this.dataset.seat
                    };
                    openModal(data);
                });
            });

            // Close handlers
            closeBtn.addEventListener('click', closeModal);
            cancelBtn.addEventListener('click', closeModal);
            window.addEventListener('click', function (e) {
                if (e.target === modal) closeModal();
            });

            // Select button action
            selectBtn.addEventListener('click', function () {
                const fareId = modal.dataset.selectedFareId;
                if (!fareId) return closeModal();

                // Navigate to booking route
                const bookingUrl = '/Booking/SelectFare?fareId=' + encodeURIComponent(fareId);
                window.location.href = bookingUrl;
            });
        });
    </script>
