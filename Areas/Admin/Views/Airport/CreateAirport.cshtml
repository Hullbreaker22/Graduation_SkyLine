@model CreateAirportVM


@{
    ViewData["Title"] = "Create Airport";
}

<div class="container mt-5" style="max-width:800px;">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add New Airport</h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="CreateAirport" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Airport Name</label>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Cairo International" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label fw-bold">Airport Code</label>
                    <input asp-for="Code" class="form-control" placeholder="e.g. CAI" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="cityId" class="form-label fw-bold">City</label>
                    <select asp-for="cityId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Cities ?? new List<SkyLine.Models.City>(), "Id", "Name"))">
                        <option value="">-- Select City --</option>
                    </select>
                    <span asp-validation-for="cityId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="terminal" class="form-label fw-bold">Terminal</label>
                        <input asp-for="terminal" class="form-control" placeholder="e.g. 1" />
                        <span asp-validation-for="terminal" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-save me-2"></i> Create Airport
                        </button>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-action="Airports" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
