@model AirPort

@{
    ViewData["Title"] = "Edit Airport";
}

<div class="container mt-5" style="max-width:800px;">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Airport</h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="AirportUpdate" asp-route-id="@Model.Id" method="post" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="alert alert-danger" asp-validation-summary="All"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label fw-bold">Code</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="cityId" class="form-label fw-bold">City</label>
                    <select asp-for="cityId" class="form-select" asp-items="@(new SelectList(ViewBag.Cities, "Id", "Name"))">
                        <option value="">-- Select City --</option>
                    </select>
                    <span asp-validation-for="cityId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="terminal" class="form-label fw-bold">Terminal</label>
                        <input asp-for="terminal" class="form-control" />
                        <span asp-validation-for="terminal" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">Save Changes</button>
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a asp-action="Airports" class="btn btn-secondary">Back to List</a>

                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this airport?');">
                        Delete
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
