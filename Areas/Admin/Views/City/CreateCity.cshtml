@model City

<div class="create-wrapper d-flex align-items-center justify-content-center">
    <div class="card city-card shadow-lg p-4 rounded-4 animate__animated animate__fadeInUp">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary mb-1"> Add New City</h2>
            <p class="text-muted">Fill the details below to add a new city to the system</p>
        </div>

        <form asp-action="CreateCity" asp-controller="City" method="post" id="createCityForm">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="nameInput" placeholder="City Name">
                <label for="nameInput">City Name</label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Country" class="form-control" id="countryInput" placeholder="Country">
                <label for="countryInput">Country</label>
                <span asp-validation-for="Country" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="TimeZone" class="form-control" id="timezoneInput" placeholder="Time Zone">
                <label for="timezoneInput">Time Zone</label>
                <span asp-validation-for="TimeZone" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="button" id="btnConfirm" class="btn btn-confirm px-4">
                    <i class="fas fa-check-circle me-1"></i> Confirm
                </button>

                <a href="/Admin/City/Cites" class="btn btn-cancel px-4">
                    <i class="fas fa-times-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Animation Library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Validation Scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    document.getElementById("btnConfirm").addEventListener("click", function () {
        const form = document.getElementById("createCityForm");

        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        Swal.fire({
            title: "Create this city?",
            text: "Do you want to save the new city record?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: "#0d6efd",
            cancelButtonColor: "#dc3545",
            confirmButtonText: "Yes, Create it",
            cancelButtonText: "Cancel"
        }).then(result => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    });
</script>

<!-- STYLES -->
<style>
    body {
        background: linear-gradient(135deg, #e0f2ff, #f5f9ff);
        font-family: 'Poppins', sans-serif;
    }

    .create-wrapper {
        min-height: 100vh;
        padding: 30px;
    }

    .city-card {
        width: 100%;
        max-width: 550px;
        background: #ffffff;
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .city-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .form-floating label {
        color: #555;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.4);
        }

    .btn-confirm {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-confirm:hover {
            background-color: #0b5ed7;
            transform: scale(1.05);
        }

    .btn-cancel {
        background-color: #dc3545;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        line-height: 38px;
    }

        .btn-cancel:hover {
            background-color: #bb2d3b;
            transform: scale(1.05);
        }
</style>
