@model List<Fare>

@section Scripts {
    @if (@TempData["success-notification"] is not null)
    {
        <script>
            toastr.success('@TempData["success-notification"]')
        </script>
    }
    else if (@TempData["error-notification"] is not null)
    {
        <script>
            toastr.error('@TempData["error-notification"]')
        </script>
    }
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3 class="fw-bold">Fares List</h3>
        <a href="/Admin/Fare/CreateFare" class="btn btn-create">+ Create New Fare</a>
    </div>

    <table class="table table-hover shadow-sm align-middle text-center">
        <thead class="bg-primary text-white">
            <tr>
                <th>ID</th>
                <th>Flight</th>
                <th>Cabin</th>
                <th>Price</th>
                <th>Refundable</th>
                <th>Changeable</th>
                <th>Baggage</th>
                <th>Seat Select</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Id</td>
                    <td>@f.flight?.Flight_Code</td>
                    <td>@f.CabinClass</td>
                    <td>@f.price.ToString("C")</td>

                    <td>
                        @if (f.Refundable)
                        {
                            <span class="status available">Available</span>
                        }
                        else
                        {
                            <span class="status not-available">Not Available</span>
                        }
                    </td>

                    <td>
                        @if (f.Changeable)
                        {
                            <span class="status available">Available</span>
                        }
                        else
                        {
                            <span class="status not-available">Not Available</span>
                        }
                    </td>

                    <td>@f.Baggage_Allowance</td>

                    <td>
                        @if (f.Seat_Selection)
                        {
                            <span class="status available">Available</span>
                        }
                        else
                        {
                            <span class="status not-available">Not Available</span>
                        }
                    </td>

                    <td>
                        <a href="/Admin/Fare/FareEdit/@f.Id" class="btn btn-sm btn-edit">Edit</a>
                        <a href="/Admin/Fare/Delete/@f.Id" class="btn btn-sm btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Delete Fare?',
            text: 'This cannot be undone!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, Delete'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Fare/Delete/' + id;
            }
        });
    }
</script>

<style>
    .btn-create {
        background: #198754;
        color: #fff;
        padding: 8px 15px;
        border-radius: 6px;
        text-decoration: none;
        transition: .3s;
    }

        .btn-create:hover {
            transform: scale(1.05);
            background: #157347;
        }

    .btn-edit {
        background: #0d6efd;
        color: #fff;
        padding: 4px 10px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 3px;
        transition: .3s;
    }

        .btn-edit:hover {
            transform: scale(1.05);
            background: #0b5ed7;
        }

    .btn-delete {
        background: #dc3545;
        color: #fff;
        padding: 4px 10px;
        border-radius: 5px;
        border: none;
        transition: .3s;
    }

        .btn-delete:hover {
            transform: scale(1.05);
            background: #bb2d3b;
        }

    /* الحالة (Available / Not Available) */
    .status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .available {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .not-available {
        background-color: #f8d7da;
        color: #842029;
    }
</style>
