@model SkyLine.Models.Fare

<div class="container mt-5 mb-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center fw-bold mb-4 text-primary">✈ Edit Fare</h2>

        <form asp-action="FareEdit" method="post" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id"/>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="flightId" class="form-label fw-semibold">Flight</label>
                    <select id="flightId" name="flightId" class="form-select">
                        @foreach (var item in ViewBag.Flights as List<Flight>)
                        {
                            @if(item.Flight_Id_PK == Model.flightId)
                            {
                                <option value="@item.Flight_Id_PK" selected>@item.Flight_Code</option>

                            }
                            else
                            {
                                <option value="@item.Flight_Id_PK">@item.Flight_Code</option>

                            }

                        }
                    </select>
                    <span class="text-danger"></span>
                </div>



                <div class="col-md-6">
                    <label asp-for="CabinClass" class="form-label fw-semibold">Cabin Class</label>
                    <select asp-for="CabinClass" class="form-select">
                        <option value="">-- Select Cabin --</option>
                        <option value="0">Basic_Economy</option>
                        <option value="1">Standard_Economy</option>
                        <option value="2">Premium_Economy</option>
                        <option value="3">Business_Class</option>
                        <option value="4">First_Class</option>
                    </select>
                    <span asp-validation-for="CabinClass" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="price" class="form-label fw-semibold">Price</label>
                    <input asp-for="price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Baggage_Allowance" class="form-label fw-semibold">Baggage Allowance</label>
                    <input asp-for="Baggage_Allowance" class="form-control" />
                    <span asp-validation-for="Baggage_Allowance" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <div class="form-check mt-4">
                        <input asp-for="Refundable" class="form-check-input" type="checkbox" />
                        <label asp-for="Refundable" class="form-check-label">Refundable</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-check mt-4">
                        <input asp-for="Changeable" class="form-check-input" type="checkbox" />
                        <label asp-for="Changeable" class="form-check-label">Changeable</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-check mt-4">
                        <input asp-for="Seat_Selection" class="form-check-input" type="checkbox" />
                        <label asp-for="Seat_Selection" class="form-check-label">Seat Selection</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-5">
                <a href="/Admin/Fare/AllFair" class="btn btn-secondary px-4 py-2 rounded-3">Cancel</a>
                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3">Update Fare</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelector("#editForm").addEventListener("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Confirm Update?',
                text: 'Are you sure you want to update this Fare?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, Update',
                cancelButtonText: 'Cancel',
                confirmButtonColor: '#0d6efd'
            }).then(result => {
                if (result.isConfirmed) e.target.submit();
            });
        });
    </script>
}

<style>
    .card {
        background: #fff;
        border: none;
        transition: 0.3s;
    }

    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #007bff);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0b5ed7, #0056b3);
        transform: scale(1.05);
    }

    .btn-secondary:hover {
        transform: scale(1.05);
    }
</style>
